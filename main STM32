/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
/* USER CODE BEGIN MX_GPIO_Init_1 */
/* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(SD_SS_GPIO_Port, SD_SS_Pin, GPIO_PIN_SET);

  /*Configure GPIO pin : B1_Pin */
  GPIO_InitStruct.Pin = B1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  HAL_GPIO_Init(B1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : SD_SS_Pin */
  GPIO_InitStruct.Pin = SD_SS_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_MEDIUM;
  HAL_GPIO_Init(SD_SS_GPIO_Port, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI15_10_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(EXTI15_10_IRQn);

/* USER CODE BEGIN MX_GPIO_Init_2 */
/* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin){
	if(HAL_GPIO_ReadPin(B1_GPIO_Port, B1_Pin) == 0){
		boton1 = 1;
	}
}

void menu(char msj){
	 bus = msj;
	 HAL_UART_Transmit(&huart1, (uint8_t*)&bus, sizeof(bus), 10);
	 HAL_UART_Receive(&huart1, &mensaje, sizeof(mensaje), 10);
	 bus = '0';
	 HAL_UART_Transmit(&huart1, (uint8_t*)&bus, sizeof(bus), 10);
}

void guardar(int numero){
	char conversion[16];
	sprintf(conversion, "%d", numero);  // Convierte el entero a cadena
	fres = f_mount(&fs, "/", 0);
	if (fres==FR_OK) {
			strcpy(memoria, "montado");
		} else if (fres != FR_OK) {
			strcpy(memoria, "cerrada");
		}
	HAL_Delay(3000);
	fres = f_open(&fil, "lab.csv", FA_CREATE_ALWAYS | FA_WRITE | FA_READ);
	if (fres==FR_OK) {
			  strcpy(memoria1, "abierto");
		} else if (fres != FR_OK) {
			strcpy(memoria1, "cerrado");
		}
	HAL_Delay(1500);
	f_puts(conversion, &fil);
	if (fres != FR_OK)
		{
			// Si hay un error al escribir
			strcpy(memoria2, "errorrr");
		}
	HAL_Delay(1500);
	fres = f_close(&fil);
	if (fres==FR_OK) {
			  strcpy(memoria3, "closeee");
		} else if (fres != FR_OK) {
			strcpy(memoria3, "noclose");
		}
	HAL_Delay(1500);
	f_mount(NULL, "", 1);
	if (fres==FR_OK) {
			  strcpy(memoria4, "desmont");
		} else if (fres != FR_OK) {
			strcpy(memoria4, "nodesmo");
		}
	HAL_Delay(1500);

}
/* USER CODE END 4 */

